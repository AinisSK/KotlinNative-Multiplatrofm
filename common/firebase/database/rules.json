{
  "rules": {
    "approval_requests": {
      ".read": "root.child('users').child(auth.uid).child('admin').val() == true",
      "$userId": {
        ".write": "(((auth != null && $userId == auth.uid) && newData.val() == $userId) || root.child('users').child(auth.uid).child('admin').val() == true)"
      }
    },
    "groups": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "institutions_collection": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "living_place_collection": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "neighborhoods": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "users": {
      "$userId": {
        ".read": "auth != null",
        ".write": "((auth != null && $userId == auth.uid) || root.child('users').child(auth.uid).child('admin').val() == true)",
        "chats": {
          ".read": "(auth != null && $userId == auth.uid)",
          ".write": "auth != null"
        },
        "admin": {
          ".validate": "(root.child('users').child(auth.uid).child('admin').val() == true || newData.val() == false)"
        },
        "approved": {
          ".validate": "(root.child('users').child(auth.uid).child('admin').val() == true || newData.val() == false)"
        }
      }
    }
  }
}
